---
import fondo360 from "../images/fondo-360.jpg";
---

<section class="py-12 lg:py-24 relative" id="360">
   <div class="lg:max-w-5xl xl:max-w-7xl mx-auto w-full relative">
      <div class="block basis-0 flex-shrink flex-grow p-2 text-center mb-3">
         <h2
            class="text-[#ededed] text-balance text-3xl md:text-4xl lg:text-5xl font-bold after:w-10 after:h-1 after:mx-auto after:mt-3 after:bg-freshmarket-primary after:block after:rounded">
            Recorrido virtual
         </h2>
      </div>
   </div>

   <figure
      class="flex items-center justify-center overflow-hidden rounded-t-lg relative max-h-[600px]">
      <img
         class="object-cover transition duration-300"
         src={fondo360.src}
         alt=""
      />
      <div
         class="flex items-stretch flex-col justify-between absolute h-full max-w-none inset-0 bg-ic-primary/85 group-hover:bg-transparent transition duration-300">
         <div
            class="grow shrink-0 py-8 px-6 lg:py-20 lg:px-14 flex items-center justify-center w-full">
            <div class="flex flex-col items-center gap-y-7 z-10">
               <h4 class="text-lg text-white font-semibold">
                  Disfruta la experiencia 360Â°
               </h4>
               <button
                  id="btn-360"
                  @click="modal360IsOpen = true"
                  class="animate-sombras bg-white flex w-16 h-16 items-center justify-center rounded-full shadow-2xl shadow-white text-4xl text-ic-secondary">
                  <svg
                     xmlns="http://www.w3.org/2000/svg"
                     width="33"
                     height="33"
                     viewBox="0 0 24 24"
                     stroke-width="2"
                     stroke="currentColor"
                     fill="none"
                     stroke-linecap="round"
                     stroke-linejoin="round">
                     <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                     <path
                        d="M6 4v16a1 1 0 0 0 1.524 .852l13 -8a1 1 0 0 0 0 -1.704l-13 -8a1 1 0 0 0 -1.524 .852z"
                        stroke-width="0"
                        fill="currentColor"></path>
                  </svg>
               </button>
            </div>
         </div>
      </div>
   </figure>

