<section class="py-12 px-6 lg:py-24 lg:px-14 relative">
   <div class="lg:max-w-5xl xl:max-w-7xl mx-auto w-full relative">
      <div class="lg:flex items-center justify-between lg:gap-x-6">
         <div
            class="block basis-0 flex-shrink flex-grow p-2 md:flex-none mx-auto lg:mx-0 text-center lg:text-left mb-5 lg:mb-0">
            <figure class="relative">
               <img
                  class="w-full rounded-md shadow-xl ring-4 ring-ic-secondary ring-opacity-90 max-w-xl xl:h-full mx-auto"
                  src="https://placehold.co/1500x1000"
                  alt="Impulso Capital"
               />
